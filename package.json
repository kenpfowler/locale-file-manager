{
  "name": "locale_file_generator",
  "version": "0.3.0",
  "description": "A tool for managing locale files from a single source",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "manage": "ts-node ./src/index.ts",
    "dev": "vitest",
    "test": "vitest run",
    "build": "tsup src/index.ts src/lib.ts --format cjs,esm --dts",
    "lint": "tsc",
    "ci": "pnpm run lint && pnpm run test && pnpm run build",
    "release": "pnpm run lint && pnpm run test && pnpm run build && changeset publish"
  },
  "keywords": [],
  "author": "Ken Fowler",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@types/deep-diff": "^1.0.5",
    "@types/node": "^22.4.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "peerDependencies": {
    "zod": "^3",
    "deep-diff": "^1"
  },
  "dependencies": {
    "deep-diff": "^1.0.2",
    "dotenv": "^16.4.5",
    "openai": "^4.56.0",
    "zod": "^3.23.8"
  }
